# Nginx Proxy Configuration Template for Multi-App Routing
# Routes: agentnav, prompt-vault, cursor-ide
# Environment variables will be substituted at runtime

user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 1024;
    use epoll;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    access_log /var/log/nginx/access.log main;

    # Performance optimizations for Cloud Run
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    client_max_body_size 10M;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript 
               application/json application/javascript application/xml+rss 
               application/rss+xml font/truetype font/opentype 
               application/vnd.ms-fontobject image/svg+xml;

    # Main server block
    server {
        listen ${PORT};
        server_name _;

        # Health check endpoint
        location /healthz {
            access_log off;
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }

        # ============================================
        # AGENTNAV Routes
        # ============================================
        
        # Agentnav API routes
        location /agentnav/api/ {
            rewrite ^/agentnav/api/(.*) /$1 break;
            proxy_pass ${AGENTNAV_BACKEND_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";
            
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
            
            proxy_buffering on;
            proxy_buffer_size 4k;
            proxy_buffers 8 4k;
        }

        # Agentnav WebSocket support for streaming
        location /agentnav/ws/ {
            rewrite ^/agentnav/ws/(.*) /$1 break;
            proxy_pass ${AGENTNAV_BACKEND_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            proxy_connect_timeout 300s;
            proxy_send_timeout 300s;
            proxy_read_timeout 300s;
        }

        # Agentnav Gemma GPU service routes
        location /agentnav/gemma/ {
            rewrite ^/agentnav/gemma/(.*) /$1 break;
            proxy_pass ${AGENTNAV_GEMMA_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";
            
            proxy_connect_timeout 300s;
            proxy_send_timeout 300s;
            proxy_read_timeout 300s;
        }

        # Agentnav frontend (SPA)
        location /agentnav/ {
            rewrite ^/agentnav/(.*) /$1 break;
            proxy_pass ${AGENTNAV_FRONTEND_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";
            
            proxy_intercept_errors on;
            error_page 404 = @agentnav_fallback;
        }

        location @agentnav_fallback {
            proxy_pass ${AGENTNAV_FRONTEND_URL};
            proxy_set_header Host $host;
        }

        # Agentnav FastAPI docs
        location /agentnav/docs {
            proxy_pass ${AGENTNAV_BACKEND_URL}/docs;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # Agentnav OpenAPI JSON (at root, not under /api/)
        location /agentnav/openapi.json {
            proxy_pass ${AGENTNAV_BACKEND_URL}/openapi.json;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # ============================================
        # PROMPT-VAULT Routes
        # ============================================
        
        # Prompt-vault API routes
        location /prompt-vault/api/ {
            rewrite ^/prompt-vault/api/(.*) /$1 break;
            proxy_pass ${PROMPT_VAULT_BACKEND_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";
            
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
        }

        # Prompt-vault frontend (SPA) - Vite dev server
        # Handle Vite HMR and assets
        location ~ ^/prompt-vault/(@vite|@react-refresh|node_modules|src|assets)/ {
            rewrite ^/prompt-vault/(.*) /$1 break;
            proxy_pass ${PROMPT_VAULT_FRONTEND_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";
            
            # WebSocket support for Vite HMR
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }

        # Prompt-vault frontend (SPA) - main route
        location /prompt-vault/ {
            rewrite ^/prompt-vault/(.*) /$1 break;
            proxy_pass ${PROMPT_VAULT_FRONTEND_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";
            
            # WebSocket support for Vite HMR
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            
            proxy_intercept_errors on;
            error_page 404 = @prompt_vault_fallback;
        }

        location @prompt_vault_fallback {
            proxy_pass ${PROMPT_VAULT_FRONTEND_URL};
            proxy_set_header Host $host;
        }

        # Prompt-vault FastAPI docs
        location /prompt-vault/docs {
            proxy_pass ${PROMPT_VAULT_BACKEND_URL}/docs;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # ============================================
        # CURSOR-IDE Routes
        # ============================================
        
        # Cursor-IDE API routes (if backend exists)
        location /cursor-ide/api/ {
            rewrite ^/cursor-ide/api/(.*) /$1 break;
            proxy_pass ${CURSOR_IDE_BACKEND_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";
            
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
        }

        # Cursor-IDE frontend (SPA)
        location /cursor-ide/ {
            rewrite ^/cursor-ide/(.*) /$1 break;
            proxy_pass ${CURSOR_IDE_FRONTEND_URL};
            proxy_http_version 1.1;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";
            
            proxy_intercept_errors on;
            error_page 404 = @cursor_ide_fallback;
        }

        location @cursor_ide_fallback {
            proxy_pass ${CURSOR_IDE_FRONTEND_URL};
            proxy_set_header Host $host;
        }

        # ============================================
        # Landing Page (Root Route)
        # ============================================
        
        # Serve landing page at root
        location = / {
            root /usr/share/nginx/html/landing;
            try_files /index.html =404;
        }

        # Serve landing page static assets
        location /landing/ {
            alias /usr/share/nginx/html/landing/;
            try_files $uri $uri/ =404;
        }

        # Root route fallback (if landing page not found, proxy to agentnav)
        location / {
            # First try to serve landing page, then fallback to agentnav
            root /usr/share/nginx/html/landing;
            try_files $uri $uri/ @agentnav_fallback;
        }

        location @agentnav_fallback {
            proxy_pass ${AGENTNAV_FRONTEND_URL};
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
